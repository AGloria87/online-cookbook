<div id="form">
  <h2>Create a New Recipe</h2>
  <form action="/recipes/create" method="POST">
    <div>
      <label> Title
        <input type="text" name="title" placeholder="Recipe Title" />
      </label>

      <section id="ingredients-form">
        <label>Ingredients</label>
        <div id="ingredients-inputs">

          <div class="ingr-field">
            <input type="text" name="ingr0" placeholder="Ingredient"/>
            <button type="button" class="ingr-remove">&times</button>
          </div>

          <div class="ingr-field">
            <input type="text" name="ingr1" placeholder="Ingredient"/>
            <button type="button" class="ingr-remove">&times</button>
          </div>

          <div class="ingr-field">
            <input type="text" name="ingr2" placeholder="Ingredient"/>
            <button type="button" class="ingr-remove">&times</button>
          </div>

        </div>
          <button type="button" class="ingr-add">+ Add Ingredient</button>
      </section>

      <section id="directions-form">
        <label>Directions</label>
        <div id="directions-inputs">

          <div class="dir-field">
            <input type="text" name="dir0" placeholder="Direction"/>
            <button type="button" class="dir-remove">&times</button>
          </div>

          <div class="dir-field">
            <input type="text" name="dir1" placeholder="Direction"/>
            <button type="button" class="dir-remove">&times</button>
          </div>

          <div class="dir-field">
            <input type="text" name="dir2" placeholder="Direction"/>
            <button type="button" class="dir-remove">&times</button>
          </div>

        </div>
        <button type="button" class="dir-add">+ Add Direction</button>
      </section>
    </div>
    <button type="submit">Create Recipe</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
  <script src="/js/recipeForm.js"></script>
</div>