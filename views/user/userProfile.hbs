<div class = "nameuser">
    <h1>{{username}}'s Profile</h1>
</div>
<section class="optionsuser">
    <div class="userRecipes">
        <h1>Personal Recipes</h1>
        {{#eq session.currentUser.username username}}
            <a class="buttonbox" href="/recipes/create">Create Recipe</a>
        {{/eq}}
        <div class="user-recipes-container">
            {{#each createdRecipes}}
                {{>recipecard this}}
            {{/each}}
        </div>
    </div>
    <div class="favRecipes">
        <h1>Favorite Recipes</h1>
        <div class="user-favrecipes-container">
            {{#each favoriteRecipes}}
                {{>recipecard this}}
            {{/each}}
        </div>
    </div>
</section>
<script src="/js/calculateRating.js"></script>